<p id="notice"><%= notice %></p>

<h1>Lenders</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Street</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lenders.each do |lender| %>
      <tr>
        <td><%= lender.first_name %></td>
        <td><%= lender.last_name %></td>
        <td><%= lender.email %></td>
        <td><%= lender.phone %></td>
        <td><%= lender.street %></td>
        <td><%= lender.state %></td>
        <td><%= lender.zip %></td>
        <td><%= link_to 'Show', lenders_path %></td>
        <td><%= link_to 'Edit', edit_lender_path(lender) %></td>
        <td><%= link_to 'Destroy', lender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

